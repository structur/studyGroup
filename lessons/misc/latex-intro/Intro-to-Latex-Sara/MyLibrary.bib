  year = {2010},
  keywords = {Neural Pathways,Brain,Female,Male,Brain Mapping,Humans,Signal Processing; Computer-Assisted,Models; Neurological,Aged,Young Adult,Aging,Cognition Disorders,Electroencephalography},
  pages = {848-861},
